{
  "compilerOptions": {
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@libs/database": [
        "src/database/src"
      ],
      "@libs/database/*": [
        "src/database/src/*"
      ]
    }
  },
  "assets": [
    "assets/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests"
  ]
}
